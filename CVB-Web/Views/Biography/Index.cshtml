@model IEnumerable<CVB_Web.Models.consultant_biography>

<h2>Biographies for @Model.First().consultant.consultant_nm</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { consultant_id = Model.First().consultant_id } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.show)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bio_descr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bio_txt)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.show)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bio_descr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bio_txt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
