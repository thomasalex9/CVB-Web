@model CVB_Web.ViewModels.ConsultantDashboard

<p></p>
<p></p>

<div class="well well-lg">
    <div class="row">
        <div class="col-sm-3">
            <img src="~/Content/meradia-globe.png" />
        </div>
        <div class="col-sm-9 text-left">
            <h2>Meradia Consultant Center</h2>
        </div>
    </div>
    <p class="lead">
        <h4 >
            Hello, Thomas E. Alex. This is where you enter your TimeSlips, and maintain your CV Profile.
        </h4> 
    </p>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">My Timeslips</h3>
            </div>
            <div class="panel-body">
                <table width="100%" class="table-responsive">
                    <tbody>
                        <tr>
                            <td align="left"><label>Vacation Days Remaining</label></td>
                            <td align="right">@String.Format("{0:n0}", Model.vacation_days_remaining)</td>
                        </tr>
                        <tr>
                            <td align="left"><label>Hours This Week</label></td>
                            <td align="right">@Model.hours_this_week</td>
                        </tr>
                        <tr>
                            <td align="left"><label>Hours Last Week</label></td>
                            <td align="right">@Model.hours_last_week</td>
                        </tr>
                        <tr>
                            <td align="left"><label>Hours Month to Date</label></td>
                            <td align="right">@Model.hours_mtd</td>
                        </tr>
                        <tr>
                            <td align="left"><label>Hours Last Month</label></td>
                            <td align="right">@Model.hours_last_month</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-primary btn-sm btn-block">
                    <span class="glyphicon glyphicon-time"></span> Enter Timeslips
                </button>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">My Profile</h3>
            </div>
            <div class="panel-body">
                <table width="100%" class="table-responsive">
                    <tr>
                        <td align="left"><label>Date of Last Edit</label></td>
                        <td align="right">3/23/2017</td>
                    </tr>
                    <tr>
                        <td align="left"><label>Application Count</label></td>
                        <td align="right">17</td>
                    </tr>
                </table>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-primary btn-sm btn-block">
                    <span class="glyphicon glyphicon-edit"></span> Maintain Your Profile
                </button>
            </div>
        </div>
    </div>
</div>